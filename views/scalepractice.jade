extends layout

block content
  div.container
    a#logo(href='/') Smart Scales
    a.logout.login-hint.right(href='logout/') Logout
    span.login-hint.right= 'Hello ' + user.firstName
  ul.list-group
    li.list-group-item
      span.right.badge= 100 + 'bpm'
      div.scale-name= scale[0].displayName
      div.image-holder
        img.piano-scale(src='/images/scales/' + scale[0].name + '.png')

  audio(enablejavascript="true")

  div#root
  div#button
  script(src="https://fb.me/react-15.0.0.js")
  script(src="https://fb.me/react-dom-15.0.0.js")
  script(type='text/javascript', src='/javascripts/tock.js')
  script(type='text/babel', src='/javascripts/metronome.jsx')
  script(src="https://cdnjs.cloudflare.com/ajax/libs/babel-core/5.8.34/browser.min.js")
